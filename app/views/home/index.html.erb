<% if current_user %>
<table>
<% @items.each do |item| %>
  <div class="row">
    <div class="col-xs-11"><a href="<%= item["resolved_url"] %>" target="_blank"><%= title(item) %></a></div>
    <div class="col-xs-1"><a href="#" class="check" data-item-id="<%= item["item_id"] %>"><i class="fa fa-check"></i></a></div>
  </div>
<% end %>
<% else %>
<%= link_to "Sign in with Pocket", "/auth/pocket" %>
<% end %>
</table>
